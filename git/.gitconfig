[alias]
  amend = commit --amend
  b = branch
  cl = clone
  cm = commit
  co = checkout
  cp = cherry-pick
  d = diff
  ds = diff --staged
  f = fetch
  m = merge
  pl = pull
  ps = push
  r = rebase
  ra = rebase --abort
  rc = rebase --continue
  ri = rebase --interactive
  rs = rebase --skip
  st = status
  sw = switch

[pull]
  ff = only

[url "git@github.com:"]
  insteadOf = "gh:"
  pushInsteadOf = "gh:"

[url "git@gitlab.com:"]
  insteadOf = "gl:"
  pushInsteadOf = "gl:"

[url "git@gist.github.com:"]
  insteadOf = "gist:"
  pushInsteadOf = "gist:"
